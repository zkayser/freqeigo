<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col col-md-2 col-xs-hidden">
    
  </div>
  <div class="col col-md-8 col-xs-12">
    <section>
      <h1><%= @blog.title.titleize %></h1>
       <ul class="list-inline meta">
        <li><!-- Author name and date go here --><%= @blog.author || "Zack Kayser"%> on <%= @blog.created_at.strftime("%B %-d, %Y") if @blog.created_at %></li>
        <li><!-- Link to comments and number of comments --><%= @blog.comments.length || "0" %> comments</li>
        <li><!-- Tags --><% if @blog.blog_tags.empty? %>
          <%= "No tags" %>
          <% else %>
          <%= @blog.blog_tags.each do |t| %>
            <%= t.tag + "," %>
          <% end %>
          <% end %>
        </li>
        </ul>
        <% if @blog.picture? %>
        <div>
          <%= image_tag(@blog.picture) %>
        </div>
        <% end %>
        <div>
          <%= @blog.content.html_safe %>
        </div>
        <% if current_user && current_user.admin? %>
        <section>
          <div class="row">
            <div class="col col-md-6 col-md-offset-3">
              <%= link_to 'Edit', edit_blog_path(@blog) %> |
              <%= link_to 'Back', blogs_path %>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </div>


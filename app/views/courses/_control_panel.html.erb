  <div class="row" id="label-row">
      <p class="label">Control panel: <br/><br/>
      <% unless current_user.has_deckified?(@word_list) %>
      <%= link_to "Create Default Deck", deckify_word_list_path(@word_list, current_user), class: 'btn btn-success', remote: true, method: :post,
          data: { disable_with: "Posting..." } %>
      <% else %>
      <%= link_to "Recreate deck?", deckify_word_list_path(@word_list, current_user), remote: true, class: 'btn btn-success recreate-deck-link', method: :post %>
      <% end %>
      <br/>
      <br/>
      <!-- Bootstrap home page -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Create Custom Deck</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Customize your own flashcard deck</h4>
              </div>
              <div class="modal-body">
                <%= render 'custom_deck_form' %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
              </div>
            </div>
          </div>
        </div>
      </p>
  </div>
  
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addCards">Add Cards to Deck?</button>
        <div class="modal fade" id="addCards" tabindex="-1" role="dialog" aria-labelledby="addCardsLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">Customize your own flashcard deck</h4>
              </div>
              <div class="modal-body">
                <%= render 'add_cards_form' %>
              </div>
            </div>
          </div>
        </div>
  
  <div class="row" id="toggle-row">
    <div class="col col-md-3" id="control-panel">
      <%= link_to 'Shuffle', study_word_list_path(@course, params[:page]), remote: true, class: 'btn btn-success shuffle-button', data: { disable_with: "Shuffling..." } %>
    </div>
    <div class="col col-md-3" id="control-panel">
      <button class="btn btn-primary" id="toggle-word-attributes">Kanji only</button>
    </div>
    <div class="col col-md-3" id="control-panel">
      <button class="btn btn-primary" id="toggle-word-list">Japanese</button>
    </div>
    <div class="col col-md-3" id="control-panel">
      <button class="btn btn-primary" id="toggle-translations">Translations</button>
    </div>
  </div>
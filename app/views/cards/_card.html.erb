<div class="card-container">
  <% if @fact %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2><%= "Question type: #{@fact.question_type}" if @fact.question_type %></h2>
      <h2><%= @fact.top.html_safe %></h2>
    </div>
  </div>
  <hr/>
  <div class="row card-bottom card-bottom-hidden">
    <div class="col-md-6 col-md-offset-3">
      <h2><%= @fact.bottom.html_safe %></h2>
    </div>
  </div>
  <% end %>
  <% if @due.blank? %>
  <p>Congratulations! You finished all the reviews for this deck!</p>
  <% end %>

      
  <div class="row">
    <div class="col col-md-12 col-sm-12 col-xs-12 btn-group">
      <div class="col col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2" id="forgot">
        <%= link_to "Again!", unsuccessful_review_path(@deck, @fact), remote: true,
          class: "btn btn-danger btn-round", method: :patch,
          data: { disable_with: "Working..." } %>
      </div>
      <div class="col col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-4 col-xs-offset-2" id="remembered">
        <%= link_to "Got it!", successful_review_path(@deck, @fact), remote: true, 
          class: "btn btn-success btn-round", method: :patch, 
          data: { disable_with: "Working.." } %>
      </div>
      
      <div class="col col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3" id="control-panel">
        <% if @fact %>
          <button class="btn btn-primary btn-round" id="show">Show Answer</button>
        <% else %>
          <button class="btn btn-primary btn-round"><%= link_to "Back to Decks", user_decks_path(current_user) %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>